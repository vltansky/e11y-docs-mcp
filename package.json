{
  "name": "e11y-docs-mcp",
  "version": "0.1.0",
  "description": "MCP server providing access to web accessibility documentation from the e11y-mcp repository. Search and fetch W3C WAI-ARIA patterns and accessibility best practices.",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "e11y-docs-mcp": "dist/server.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/server.js",
    "inspector": "nodemon --watch dist --exec 'npx @modelcontextprotocol/inspector node dist/server.js'",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "prepublishOnly": "npm run build && chmod +x dist/server.js",
    "postinstall": "chmod +x dist/server.js 2>/dev/null || true"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "accessibility",
    "a11y",
    "e11y",
    "web-accessibility",
    "w3c",
    "wai-aria",
    "aria",
    "documentation",
    "typescript",
    "ai-assistant",
    "claude",
    "cursor"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@vitest/ui": "^3.2.2",
    "nodemon": "^3.1.10",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.2"
  }
}
